<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_radiusInTopLeft="8dp"
    app:shape_radiusInTopRight="8dp"
    app:shape_solidColor="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_zhifubao"
        android:drawableStart="@drawable/zhifubai"
        android:paddingStart="12dp"
        android:text="支付宝支付"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <View
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_xianjin"

        android:drawableStart="@drawable/xianjin"
        android:text="现金支付"
        android:textSize="20dp"
        android:paddingStart="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</com.hjq.shape.layout.ShapeLinearLayout>